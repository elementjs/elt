{
  "name": "elt",
  "version": "1.0.0-alpha1",
  "repository": "https://github.com/elementjs/elt",
  "description": "",
  "license": "MIT",
  "main": "./lib/elt.js",
  "typings": "./lib/elt.d.ts",
  "scripts": {
    "build:dts": "dts-bundle --name elt --main build/index.d.ts --out ../lib/elt.d.ts && sed -i 's/^global/declare global/' ./lib/elt.d.ts",
    "build:js": "tsc && webpack",
    "build": "npm run build:js && npm run build:dts",
    "prepublish": "npm run build",
    "watch": "parallel -u ::: 'ls build/*.d.ts | entr -d npm run build:dts' 'tscc -w' 'webpack -w'"
  },
  "dependencies": {
    "tslib": "*"
  },
  "devDependencies": {
    "dts-bundle": "^0.7.3",
    "source-map-loader": "^0.1.5",
    "webpack": "^1.13.2"
  }
}
